{
  "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
  "description": "Timeline of events",
  "width": 1300, "height": 250,
  "data": {"url": "/api/v1/vegalite_events_timeline?startDate=2017-07-01&endDate=2017-12-12"},
  "mark": "area",
  "encoding": {
    "x": {
      "timeUnit": "yearmonthdate", "field": "date", "type": "temporal",
      "axis": {"title": false}
    },
    "y": {
      "aggregate": "sum", "field": "count", "type": "quantitative",
      "axis": {"title": "Number of events"}
    },
    "color": {
      "field": "type",
      "type": "nominal"
    }
  }
}